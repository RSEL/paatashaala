select A.description
    B.userType
    C.name
from post A
inner join post_share_mapping B
    on A.postId=B.post_Id
inner join share C 
    on B.shareId= C.shareId
    where userid=1;
    
 SELECT t1.description, t2.usertype,t3.name
  FROM post AS t1 INNER JOIN post_share_mapping AS t2 ON t1.postId = t2.post_Id  INNER JOIN share AS t3 ON t3.shareId = t2.shareId where t1.userId=3;